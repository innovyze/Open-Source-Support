{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Write Current File Name",
        "type": "shell",
        "command": "cmd",
        "args": [
          "/C",
          "echo ${file}> .vscode/current_file_path.txt"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "silent"
        }
      },
      {
        "label": "IExchange",
        "type": "process",
        "command": "C:/Program Files/Autodesk/InfoWorks ICM Ultimate 2024/ICMExchange.exe",
        "args": [
          "--version",
          "--",
          "${workspaceFolder}/.vscode/repl.rb",
          "/ICM",
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run Ruby",
        "dependsOrder": "sequence",
        "dependsOn": [
          "Write Current File Name",
          "IExchange"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
    }
   ]
}
  